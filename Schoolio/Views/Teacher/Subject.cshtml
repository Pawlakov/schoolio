@using Schoolio.ViewModels.Teacher
@model SubjectViewModel

@{
    ViewBag.Title = "Subject";
}

<div class="row">
    <div class="col-md-6">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-md-6">
        <a href="@Url.Action("SubjectType", "Teacher", new {id = Model.SubjectTypeId})" class="btn btn-default pull-right">Subject Type</a>
    </div>
</div>
@*Godziny w których jest przedmiot.*@
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                <strong>
                    #
                </strong>
            </th>
            <th>
                Student Name
            </th>
        </tr>
    </thead>
    <tbody>
        @{ var i = 0;}
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @(i++)
                </td>
                <td>
                    <a href="@Url.Action("Student", "Teacher", new {id = item.Id})">@Html.DisplayFor(model => item.Name)</a>
                </td>
            </tr>
        }
    </tbody>
</table>